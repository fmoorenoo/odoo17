<odoo>
  <data>
    <record model="ir.ui.view" id="lista_tareas.list">
      <field name="name">lista_tareas list</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
      <tree>
        <field name="tarea"/>
        <field name="prioridad"/>
        <field name="urgente"/>
        <field name="realizada"/>
      </tree>
      </field>
    </record>
    <record model="ir.actions.act_window" id="lista_tareas.action_window">
      <field name="name">Listado de tareas pendientes</field>
      <field name="res_model">lista_tareas.lista_tareas</field>
      <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Listado de tareas" id="lista_tareas.menu_root"/>
    <menuitem name="Opciones Lista Tareas" id="lista_tareas.menu_1" parent="lista_tareas.menu_root"/>
    <menuitem name="Mostrar lista" id="lista_tareas.menu_1_list" parent="lista_tareas.menu_1" action="lista_tareas.action_window"/>

    <record model="ir.ui.view" id="lista_tareas.kanban">
      <field name="name">lista_tareas.kanban.view</field>
      <field name="model">lista_tareas.lista_tareas</field>
      <field name="arch" type="xml">
      <kanban>
        <field name="tarea"/>
        <field name="prioridad"/>
        <field name="urgente"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_card">
                  <div class="oe_product_desc flex-container">
                          <div class="flex-item">
                                  <img src="https://i.pravatar.cc/64"/>
                          </div>
                          <div class="flex-item">
                            <h4><t t-esc="record.tarea.value"/></h4>
                            <div>
                              <strong>Prioridad:</strong> <t t-esc="record.prioridad.value"/>
                            </div>
                            <div>
                              <strong>Urgente:</strong> <field name="urgente"/>
                            </div>
                          </div>
                  </div>
            </div>
          </t>
        </templates>
        </kanban>
      </field>
    </record>
    <record model="ir.actions.act_window" id="lista_tareas.action_window_kanban">
      <field name="name">Mostrar Kanban</field>
      <field name="res_model">lista_tareas.listatareas</field>
      <field name="view_mode">kanban</field>
      <field name="view_id" ref="lista_tareas.kanban"/>
    </record>
    <menuitem name="Listado de tareas" id="lista_tareas.menu_root" />
    <menuitem name="Opciones Lista Tareas" id="lista_tareas.menu_1" parent="lista_tareas.menu_root" />
    <menuitem name="Mostrar lista" id="lista_tareas.menu_1_list" parent="lista_tareas.menu_1" action="lista_tareas.action_window" />
    <menuitem name="Listado Kanban" id="lista_tareas.menu_2_kanban" parent="lista_tareas.menu_1" action="lista_tareas.action_window_kanban" />
  </data>
</odoo>
